rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // User profiles
    match /users/{userId} {
      allow read: if isAuthenticated(); // Users can read other profiles
      allow write: if isOwner(userId); // Users can only write their own profile
    }

    // Sightings - assuming they are stored in a top-level collection or under users
    // If top level:
    match /sightings/{sightingId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // eBird Image Cache - used by the backend functions, but client might read
    match /ebird_image_cache/{speciesCode} {
      allow read: if isAuthenticated();
      // Only backend (admin SDK) writes to this, so no write rules needed for client
    }
    
    // Rate limits
    match /api_rate_limits/{docId} {
       allow read, write: if false; // Only backend accesses this
    }
  }
}
